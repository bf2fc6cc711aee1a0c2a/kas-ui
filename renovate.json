{
"extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "groupName": "all",
   "ignoreDeps": [
    "keycloak-js"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^@rhoas"],
      "groupName": "RHOAS SDK packages",
      "automerge": false,
    },
    {
      "matchPackagePatterns": ["^@bf2"],
      "groupName": "Shared components packages",
      "automerge": true,
    }
  ]
}
